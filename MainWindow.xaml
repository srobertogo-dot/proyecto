<Window x:Class="WpfAppDataBlindingP2C1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDataBlindingP2C1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label x:Name="lbltitulo"
               Content="Ejemplo de Data Blinding"
               FontWeight="Bold"
               Grid.ColumnSpan="2"
               FontSize="30"
               HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="2">
            <Label x:Name="lblNomProd"
        Content="Producto :"
                   FontSize="20"
                   FontWeight="Bold"/>
            <TextBox x:Name="txtNomProd"
                     Text="{Binding producto.Nombre}"
                     Height="40"
                     Margin="5"
                     />
        </StackPanel>
        <StackPanel Grid.Column="1" 
                Grid.Row="2">
            <Label x:Name="lblNomPrecio"
Content="Precio :"
           FontSize="20"
           FontWeight="Bold"/>
            <TextBox x:Name="txtNomPrecio"
                     Text="{Binding producto.Precio}"
             Height="40"
             Margin="5"
                         FontSize="20"
                         FontWeight="Bold"
             />
        </StackPanel>
        <Button x:Name="btnAgregar"
                Grid.Row="3"
                Grid.Column="1"
                Margin="10,0"
                FontWeight="Bold"
                Content="Agregar Prod"/>

    </Grid>
</Window>
